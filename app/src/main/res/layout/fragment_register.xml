<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.register.RegisterFragment">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_dialog"
        android:paddingBottom="24dp">




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imag1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginStart="157dp"
            android:layout_marginEnd="157dp"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Silencio! "
            app:layout_constraintTop_toBottomOf="@id/img1"
            app:layout_constraintStart_toStartOf="@id/img1"
            app:layout_constraintEnd_toEndOf="@id/img1"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="@color/textblue"
            android:textSize="20dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/text2"
            android:layout_width="308dp"
            android:layout_height="112dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/continue_with_google"
            android:textColor="@color/textblue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="42dp"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/custom_button"
            android:id="@+id/btnphnono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="81dp"
            android:minHeight="60dp"
            app:cornerRadius="25dp"
            android:text="Continue with Phone Number"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/text2"
            app:layout_constraintStart_toStartOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@id/text2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button1"
            android:minHeight="60dp"
            android:text="Continue with Apple"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/btnphnono"
            app:layout_constraintStart_toStartOf="@+id/btnphnono"
            app:layout_constraintTop_toBottomOf="@id/btnphnono" />

        <TextView
            android:id="@+id/txtaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/dm_sans"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="148dp"
            android:layout_marginStart="108dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="50dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>