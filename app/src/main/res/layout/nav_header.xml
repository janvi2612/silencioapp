<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">



    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/singleneutralcircle"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="22dp"

        />
        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chris Lavin"
            android:textColor="@color/textblue"
            android:textSize="20sp"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/img1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="41dp"
            android:layout_marginStart="19dp"
            />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Edit profile"
            android:textColor="@color/blue"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/textname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/textname"
            app:layout_constraintTop_toBottomOf="@id/textname" />


            <ImageView
                android:id="@+id/imghistory"
                android:src="@drawable/circleclocl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img1"
                android:layout_marginTop="59dp"
                android:layout_marginStart="21dp"/>

            <TextView
                android:id="@+id/txthistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="History"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/textblue"
                app:layout_constraintStart_toEndOf="@id/imghistory"
                app:layout_constraintTop_toTopOf="@id/imghistory"
                app:layout_constraintBottom_toBottomOf="@id/imghistory"
                />

        <ImageView
            android:id="@+id/imgrefer"
            android:src="@drawable/referefriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/imghistory"
            app:layout_constraintTop_toBottomOf="@id/imghistory"
            app:layout_constraintEnd_toEndOf="@id/imghistory"
            android:layout_marginTop="47dp"
            />
     <TextView
        android:id="@+id/txtreferfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Refer a friend"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgrefer"
        app:layout_constraintTop_toTopOf="@id/imgrefer"
        app:layout_constraintBottom_toBottomOf="@id/imgrefer"
        />

    <ImageView
        android:id="@+id/imgcommunity"
        android:src="@drawable/community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgrefer"
        app:layout_constraintTop_toBottomOf="@id/imgrefer"
        app:layout_constraintEnd_toEndOf="@id/imgrefer"
        android:layout_marginTop="47dp"
        />

    <TextView
        android:id="@+id/txtcommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Community"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgcommunity"
        app:layout_constraintTop_toTopOf="@id/imgcommunity"
        app:layout_constraintBottom_toBottomOf="@id/imgcommunity"
        />

    <ImageView
        android:id="@+id/imgacademy"
        android:src="@drawable/academy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgcommunity"
        app:layout_constraintTop_toBottomOf="@id/imgcommunity"
        app:layout_constraintEnd_toEndOf="@id/imgcommunity"
        android:layout_marginTop="47dp"/>

    <TextView
        android:id="@+id/txtacademy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Silencio Academy"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgacademy"
        app:layout_constraintTop_toTopOf="@id/imgacademy"
        app:layout_constraintBottom_toBottomOf="@id/imgacademy"
        />


    <ImageView
        android:id="@+id/imgroadmap"
        android:src="@drawable/roadmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgacademy"
        app:layout_constraintTop_toBottomOf="@id/imgacademy"
        app:layout_constraintEnd_toEndOf="@id/imgacademy"
        android:layout_marginTop="47dp"
        />

    <TextView
        android:id="@+id/txtroad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Silencio Roadmap"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgroadmap"
        app:layout_constraintTop_toTopOf="@id/imgroadmap"
        app:layout_constraintBottom_toBottomOf="@id/imgroadmap"
        />

    <ImageView
        android:id="@+id/imgwhitemap"
        android:src="@drawable/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgroadmap"
        app:layout_constraintTop_toBottomOf="@id/imgroadmap"
        app:layout_constraintEnd_toEndOf="@id/imgroadmap"
        android:layout_marginTop="47dp"
        />

    <TextView
        android:id="@+id/txtwhitemap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Silencio Whitepaper"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgwhitemap"
        app:layout_constraintTop_toTopOf="@id/imgwhitemap"
        app:layout_constraintBottom_toBottomOf="@id/imgwhitemap"
        />

    <ImageView
        android:id="@+id/imgfqa"
        android:src="@drawable/qa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgwhitemap"
        app:layout_constraintTop_toBottomOf="@id/imgwhitemap"
        app:layout_constraintEnd_toEndOf="@id/imgwhitemap"
        android:layout_marginTop="47dp"/>

    <TextView
        android:id="@+id/txtqa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="FAQ"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/textblue"
        app:layout_constraintStart_toEndOf="@id/imgfqa"
        app:layout_constraintTop_toTopOf="@id/imgfqa"
        app:layout_constraintBottom_toBottomOf="@id/imgfqa"
        />

    <ImageView
        android:id="@+id/imglogout"
        android:src="@drawable/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgfqa"
        app:layout_constraintTop_toBottomOf="@id/imgfqa"
        app:layout_constraintEnd_toEndOf="@id/imgfqa"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:id="@+id/txtlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/imglogout"
        app:layout_constraintTop_toTopOf="@id/imglogout"
        app:layout_constraintBottom_toBottomOf="@id/imglogout"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>